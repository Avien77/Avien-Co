<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.MyController">
    <top>
        <Text text="Chat Application" style="-fx-font-size: 18px; -fx-padding: 10;" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <TextArea fx:id="chatHistory" editable="false" wrapText="true" style="-fx-font-size: 14px;" />
    </center>
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <TextField fx:id="messageInput" promptText="Type your message here..." HBox.hgrow="ALWAYS" />
            <Button text="Send" onAction="#sendMessage" />
        </HBox>
    </bottom>
</BorderPane>